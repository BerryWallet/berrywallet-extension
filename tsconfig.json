{
    "compilerOptions": {
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "jsx": "react",
        "lib": [
            "es2016",
            "dom"
        ],
        "rootDirs": [
            "./src"
        ],
        "baseUrl": "./src",
        "outDir": "./dist/typescript",
        "allowJs": true,
        "sourceMap": true,
        "declaration": false,
        "skipLibCheck": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*"
    ]
}
